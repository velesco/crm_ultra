# WhatsApp Server Environment Variables - PRODUCTION

# Server Configuration
PORT=3001
NODE_ENV=production
API_HOST=https://ultra-crm.aipro.ro

# Laravel Integration
LARAVEL_API_URL=https://ultra-crm.aipro.ro/api
LARAVEL_API_TOKEN=your-secure-production-token
WEBHOOK_SECRET=your-secure-production-webhook-secret

# WhatsApp Configuration
WHATSAPP_SESSION_DIR=./sessions
WHATSAPP_SESSION_TIMEOUT=300000
MAX_RETRY_ATTEMPTS=3

# Security - Production
CORS_ORIGIN=https://ultra-crm.aipro.ro
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/whatsapp-server.log

# PM2 Configuration
PM2_INSTANCES=1
PM2_MAX_MEMORY_RESTART=500M